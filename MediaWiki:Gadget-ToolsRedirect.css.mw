div.dialog-redirect .mw-ajax-loader {
	top: 0;
}

div.dialog-redirect span.gap {
	padding-left:2px;
	padding-right:2px;
}

div.dialog-redirect a:visited {
	color:#0B0080;
}

div.dialog-redirect a {
	color:#0645AD;
}

div.dialog-redirect a.new:visited {
	color:#A55858;
}

div.dialog-redirect a.new {
	color:#CC2200;
}

.tools-redirect_methods > a:first-of-type:before {
	content: '( ';
}

.tools-redirect_methods > a:before {
	content: ' | ';
}

.tools-redirect_methods > a:last-of-type:after {
	content: ' )';
}
