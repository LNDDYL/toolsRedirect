div.dialog-redirect .loading {
  background-image:url('http://bits.wikimedia.org/w/extensions/UsabilityInitiative/images/wikiEditor/toolbar/loading-small.gif?45');
  background-repeat:no-repeat;
  background-position:right center;
  padding-right:18px;
}

div.dialog-redirect .meta-title {
  display:none;
}

div.dialog-redirect span.gap {
  padding-left:2px;
  padding-right:2px;
}

div.dialog-redirect a:visited {
  color:#0B0080;
}

div.dialog-redirect a {
  color:#0645AD;
}

div.dialog-redirect a.new:visited {
  color:#A55858;
}

div.dialog-redirect a.new {
  color:#CC2200;
}
